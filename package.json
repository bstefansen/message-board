{
  "name": "message-board-server",
  "version": "0.0.1",
  "proxy": "http://localhost:3000/",
  "description": "A message-board web application using the MERN stack",
  "scripts": {
    "heroku-postbuild": "cd client && npm install && npm run build",
    "start": "node server.js",
    "client": "cd client && npm start",
    "dev": "concurrently --kill-others-on-fail \"yarn start\" \"yarn client\""
  },
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "^1.20.1",
    "chai": "^4.2.0",
    "concurrently": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "helmet": "^3.22.0",
    "path": "^0.12.7",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "serve": "^11.3.2",
    "yarn": "^1.22.4"
  },
  "devDependencies": {
    "concurrently": "^4.1.2"
  },
  "keywords": [
    "node",
    "hyperdev",
    "express"
  ],
  "license": "MIT"
}
